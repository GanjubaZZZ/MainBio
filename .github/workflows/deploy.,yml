name: ğŸš€ Deploy from GitHub

on:
  push:
    branches:
      - main   # Ğ°Ğ±Ğ¾ master, ÑĞºÑ‰Ğ¾ Ğ¿Ğ¾Ñ‚Ñ€Ñ–Ğ±Ğ½Ğ¾

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: âœ… Checkout code
        uses: actions/checkout@v3

      - name: ğŸ”‘ Setup SSH key
        uses: webfactory/ssh-agent@v0.7.0
        with:
          ssh-private-key: ${{ secrets.SERVER_KEY }}

      - name: ğŸ“‚ Copy updated code to server (git pull)
        run: |
          ssh -o StrictHostKeyChecking=no root@${{ secrets.SERVER_IP }} "
            cd /var/www/html &&
            git pull
          "

      - name: ğŸš€ Run deploy.sh on server
        run: |
          ssh -o StrictHostKeyChecking=no root@${{ secrets.SERVER_IP }} "
            cd /var/www/html/deploy &&
            chmod +x deploy.sh &&
            ./deploy.sh
          "

      - name: ğŸ”„ Restart nginx
        run: |
          ssh -o StrictHostKeyChecking=no root@${{ secrets.SERVER_IP }} "
            systemctl restart nginx
          "
